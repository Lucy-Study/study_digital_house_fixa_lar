<!DOCTYPE html>
<html lang="pt-br">

<!--Head-->
<%- include('../includes/head', {title: 'Fixa Lar | Admin'}) %>

<link rel="stylesheet" type="text/css" href="/css/style-cadastro.css">

<body>
  <!--###### navbar section #############-->
  <nav class="navbar navbar-expand-lg static-top nav-style sticky-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img class="img-logo" src="/img/Logo_FixaLar.png" alt="Fixa Lar" />
      </a>
      <button class="navbar navbar-toggleable-md navbar-light navbar-toggler navbar-toggler-right nav-btn-border"
        type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="menu">
            <a class="nav-link btn-outline-success link-houver" href="/#sect">Como Funciona</a>
          </li>
          <li class="menu">
            <a class="nav-link btn-outline-success link-houver" href="/#call-to-action">Seja Parceiro</a>
          </li>
          
          <li class="menu">
            <a class="nav-link btn-outline-success link-houver" href="/#footer-container">Contato</a>
          </li>

          <% if(typeof(user.email) !== 'undefined') {%>
            <li class="menu">
              <form action="/" method="POST">
                <button type="submit" class="mt-1 text-success btn btn-outline-dark">Logout</button>
              </form>
            </li>  
          <% }else{ %>
            <li class="menu">
              <a class="nav-link btn-outline-success link-houver" href="/#login">Login</a>
            </li>
          <% } %>  
          <li class="link-cadastrar menu btn-outline-outline-warning">
            <a class="nav-link-cadastro nav-link" ><%= user.email %></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="card-cadastro">
    <div class="card">
      <div class="card-header text-white title-card">
        <h2>Index Admin Data Base</h2>
      </div>

      <div class="card-body">
        <form action="/admin/store" method="get">
          <button type="submit" class="btn btn-primary btn-sm btn-lg btn-block mb-3">
            Adicionar Cliente, Prestador, Admin ao Banco de Dados
          </button>
        </form>
        <ul class="list-group d-flex justify-content-between">
          <% if(typeof(users) !== 'undefined') { %>
            <% users.forEach(user => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= user.name %>

              <div class="d-flex">

                <form method="GET" action="/admin/update/<%=user.id %>" class="mr-2">
                  <button type="submit" class="badge badge-success badge-pill">
                    Update
                  </button>
                </form>

                 <form method="POST" action="/admin/<%=user.id%>?_method=DELETE" class="mr-2">
                  <button type="submit" class="badge badge-danger badge-pill">Delete</button>
                </form>
              </div>
            </li>
            <% } ) %>
          <% } %>  
         
        </ul>

      </div>
      <!--fim do formulÃ¡rio-->
    </div>
  </div>
  <!--fim do card para cadastro-->

  <!-- footer section -->
  <%- include('../includes/footer') %>

  <!-- Bootstrap core JavaScript -->
  <script src="/jquery/jquery.slim.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>